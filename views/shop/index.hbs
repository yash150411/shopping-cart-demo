<style>



.btn{
    color: #ffffff;
    background-image: linear-gradient(to bottom,#ec9700 0,#0000006e 100%);
    border-color: #ffffff;
}

.btn :hover{
    color: #fff;
    background-color: #1c1d1c;
    border-color: #ffffff;
}

.thumbnail{
    border: 1px solid #050529;
    background-color: #050528;
    border-radius: 3%;
}

.glyphicon-chevron-right:before {
    content: "\e080";
    color: #ec9700;
}

.glyphicon-chevron-left:before {
    content: "\e079";
    color: #ec9700;
}

.carousel-indicators .active {
    width: 12px;
    height: 12px;
    margin: 0;
    background-color: #ffb300;
}

.productName{
    color: #ffffff;
}

.description{
    color: #ffb300;
}

.category{
    color: #ffee00;
}

.price{
    color: #ffffff;
}

</style>


<div class="container">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
  <div class="carousel-inner">
      <div class="item active">
          <img src="/images/back1.jpg" alt="Los Angeles" style="width:100%; max-height:300px;">
      </div>

      <div class="item">
          <img src="/images/back1.jpg" alt="New york" style="width:100%; max-height:300px;">
      </div>


      <div class="item">
          <img src="/images/back1.jpg" alt="New york" style="width:100%; max-height:300px;">
      </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>


<div class="row">
    <div class="col-sm-6 col-md-3 col-md-offset-3 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}} hidden {{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>

{{# each products }}
<div class="prod" style="background-color:#eaeded;">
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-3 mt-1">
                <div class="thumbnail">
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3 class="productName">{{ this.productname }}</h3>
                        <p class="description">{{ this.description }}</p>
                        <p class="category">{{ this.category }}</p>
                        <div class="clearfix">
                            <div class="price pull-left"><strong>Rs - {{ this.price }}/-</strong></div>
                            <a href="/add-to-cart/{{this._id}}" class="btn pull-right" role="button"><strong>ADD TO CART</strong></a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
 </div>
{{/each}}
