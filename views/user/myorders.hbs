<style>

#info{
    color: white;
    text-transform:capitalize;
}

#sub-info{
    color: #ffc107;
}

.panel-footer{
    background-color: #ffc107;
}

#thank{
    text-transform:capitalize;
}

#heading{
     background: -webkit-linear-gradient(#ff6b01ad,#b3712e);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

</style>
{{# if orders}}
<h1 id="thank">Thankyou For Shopping With Us {{ user.firstname}} {{ user.lastname}}</h1>

{{# each orders }}
<div class="row">
    <div class="panel panel-default col-md-9 col-md-offset-1" style="background-color:black">
        <div class="panel-head">
            <div class="row mt-5 ml-2">
                <strong><p id="info">Order-Date :-  {{  this.date }} </p> </strong>            
            </div>
              
              <div class="row ml-2">
                  <strong><p id="info">Delivery Address :- {{ this.fullName }}, {{ this.flatNo }} {{ this.street }} </p> </strong>
              </div>
        </div> 
        <hr>     
          <div class="panel-body"> 
              <div class="row">
                  <div class="col-md-3">
                     <p id="info">Product Name</p> 
                  </div>
                  <div class="col-md-3">
                     <p id="info">Quantity</p> 
                  </div>
                  <div class="col-md-3">
                     <p id="info">Price</p> 
                  </div>
                  <div class="col-md-3">
                     <p id="info" style="text-align:right; margin-right:15px">Total</p> 
                  </div>
              </div>      
            <ul class="list-group">
                {{# each this.items }}
                    <li class="list-group-item">                 
                       <div class="row">
                            <div class="col-md-3">
                                <p>{{ this.item.productname }}</p> 
                             </div>
                            <div class="col-md-3">
                                 <p>{{ this.qty }}</p> 
                            </div>
                            <div class="col-md-3">
                                 <p>Rs :- {{ this.price }}</p> 
                            </div>

                           <span class="badge">Rs {{ this.price }}</span></div> 
                    </li>
                {{/each}}
            </ul>
        </div>

        <div class="panel-footer">
            <strong>Total Amount: Rs {{ this.cart.totalPrice }}/-</strong>
        </div>

    </div>

  </div>
</div>
{{/each}}
</div>
</div>
    {{else}}
    <h1 id="heading">Sorry {{ user.firstname}}, You Haven't Ordered Anything Yet !!</h1>
{{/if}}
