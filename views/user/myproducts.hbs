
<style>

.btn{
    color: #ffffff;
    background-color: red;
    border-color: #ffffff;
}

</style>

<div>
  <h1 style="text-transform:capitalize">{{ user.firstname }}'s Products</h1>
  {{# if message}}
        <div class="alert alert-success" role="alert">
             <p>{{message}}</p>
        </div>  
  {{/if}}
  <h6>{{ this.products.productname }}<h6>
{{# if products}}
<div>
    {{# each products }}
        <div class="row">
            {{# each this }}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                        <div class="caption">
                            <h3>{{ this.productname }}</h3>
                            <p class="description">{{ this.description }}</p>
                            <div class="clearfix">
                                <div class="price pull-right"><strong>Rs{{ this.price }}</strong></div>
                                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                                <a href="/user/deleteproduct/{{this._id}}" class="btn pull-right" role="button"><strong>Delete My Product</strong></a>
                                <button type="submit" class="btn btn-success">edit my product</button>
                                
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{/each}}
  </div>
  <div>
    <h1>orders received</h1>
  {{ else}}
      <div>
          <h2>Sorry {{ user.firstname}}, you do not have any product to sell</h2>
          <a href="/user/sell"><button>start selling now</button></a>
      </div>
{{/if}}
