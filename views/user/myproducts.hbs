
<style>

.btn{
    color: #ffffff;
    background-image: linear-gradient(to bottom,#ec9700 0,#807d15 100%);
    border-color: #ffffff;
}
#heading{
    background: -webkit-linear-gradient(#ff6b01ad,#b3712e);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

</style>

<div>
  <h1 style="text-transform:capitalize">{{ user.firstname }}'s Products</h1>
  {{# if message}}
        <div class="alert alert-success" role="alert">
             <p>{{message}}</p>
        </div>  
  {{/if}}
  <h6>{{ this.products.productname }}<h6>
{{# if products}}
<div>
    {{# each products }}
        <div class="row">
            {{# each this }}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                        <div class="caption">
                            <h3>{{ this.productname }}</h3>
                            <p class="description">{{ this.description }}</p>
                            <div class="clearfix">
                                <div class="price pull-right"><strong>Rs{{ this.price }}</strong></div>
                                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                                <a href="/user/deleteproduct/{{this._id}}" class="btn pull-right" role="button"><strong>Delete My Product</strong></a>
                                <button type="submit" class="btn btn-success">edit my product</button>
                                
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{/each}}
  </div>
  <div>
    <h1>orders received</h1>
  {{ else}}
      <div>
          <h2 id="heading">Sorry {{ user.firstname}}, You Have Not Listed Any Product To Sell !!</h2>
          <a href="/user/sell" class="btn" role="button"><strong>Start Selling Now</strong></a>
      </div>
{{/if}}
