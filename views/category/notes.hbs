<h1> this is a category notes page</h1>

{{# if products}}
<div>
    {{# each products }}
        <div class="row">
            {{# each this }}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                        <div class="caption">
                            <h3>{{ this.productname }}</h3>
                            <p class="description">{{ this.description }}</p>
                            <div class="clearfix">
                                <div class="price pull-left">Rs{{ this.price }}</div>
                                <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">ADD TO CART</a>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{/each}}
  </div>
{{/if}}
